<%= form_for([
							@periferico.comodo.residencia.usuario,
							@periferico.comodo.residencia,
							@periferico.comodo,
							@periferico
							], :remote => true) do |f| %>

 	<%= render :partial => 'layouts/errors', :locals => {:entity => @periferico} %>

	<table id='tabela_novo_periferico'>
	    <tr>
	      <td>
					<%= f.label :nome %>
	        <%= f.text_field :nome  %>
	      </td>
			</tr>
			<tr>
	      <td>
					<%= f.label :pino %>
	        <%= f.text_field :pino  %>
	      </td>
	   	</tr>
			<tr>
	      <td>
	        <%= f.submit %>
	      </td>
	    </tr>
	</table>

<% end %>

